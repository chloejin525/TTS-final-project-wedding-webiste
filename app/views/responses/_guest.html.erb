<!-- The guests_attributes [] can be :guests -->
<!-- See resposne controller for :guests_attributes -->
<!-- There is no need for form.fields_for -->
<!-- Because it is 'guest' here in the first line, it works-->
<%= fields_for "guests_attributes[]", guest do |guest_form| %>
    <div class="form-group">
      <%= guest_form.label :first_name %>
      <%= guest_form.text_field :first_name %>
    </div>

    <div class="form-group">
      <%= guest_form.label :last_name %>
      <%= guest_form.text_field :last_name %>
    </div>

    <div class="form-group">
      <%= guest_form.label "What would you like to have for Entree?" %><br>
      <%= guest_form.radio_button :food, 'Pasta' %><p> Penne Pasta with Grilled Portobellos, Spinach and Roasted Red Peppers in Basil Cream Sauce</p>
      <%= guest_form.radio_button :food, 'Ribs' %><p>BBQ Ribs</p>
    </div>

<% end %>
<hr class="style-fade">
